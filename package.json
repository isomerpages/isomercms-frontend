{
  "name": "isomercms-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "@sentry/react": "^5.27.6",
    "@sentry/tracing": "^5.27.6",
    "axios": "^0.21.1",
    "bluebird": "^3.7.1",
    "bootstrap": "^4.3.1",
    "cheerio": "^1.0.0-rc.3",
    "csp-parse": "0.0.2",
    "cypress-file-upload": "^5.0.7",
    "dompurify": "^2.2.2",
    "easymde": "^2.8.0",
    "escape-string-regexp": "^4.0.0",
    "html-react-parser": "^1.1.1",
    "immutability-helper": "^3.0.1",
    "js-base64": "^2.5.1",
    "lodash": "^4.17.21",
    "marked": "^0.7.0",
    "module-alias": "^2.2.2",
    "node-sass": "^4.13.1",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-beautiful-dnd": "^12.0.0",
    "react-color": "^2.17.3",
    "react-dom": "^16.10.2",
    "react-input-mask": "^2.0.4",
    "react-query": "^3.9.8",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.3",
    "react-select": "^3.1.0",
    "react-simplemde-editor": "^4.1.0",
    "react-toastify": "^6.1.0",
    "react-toggle-button": "^2.2.0",
    "sgds-govtech": "^1.3.16",
    "slugify": "^1.3.6",
    "toml": "^3.0.0",
    "type-fest": "^0.13.1",
    "uuid": "^3.3.3",
    "yaml": "^1.10.2"
  },
  "scripts": {
    "run": "source .env && craco start",
    "dev": "source .env && craco start",
    "build": "craco build",
    "test": "craco test",
    "test-e2e": "cypress run",
    "lint": "eslint --ext .js --ext .jsx --ignore-path .gitignore .",
    "lint-fix": "eslint --ext .js --ext .jsx --ignore-path .gitignore . --fix",
    "format": "npx prettier --check .",
    "format-fix": "npx prettier --write .",
    "cypress:open": "cypress open",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.9.0",
    "@jest/globals": "^27.0.3",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "cypress": "^7.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "2.2.1",
    "react-test-renderer": "^17.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@root": ".",
    "@components": "src/components",
    "@contexts": "src/contexts",
    "@hooks": "src/hooks",
    "@layouts": "src/layouts",
    "@routing": "src/routing",
    "@styles": "src/styles",
    "@templates": "src/templates",
    "@utils": "src/utils"
  },
  "jest": {
    "moduleNameMapper": {
      "^@src(.*)": "<rootDir>/src$1",
      "^@components(.*)": "<rootDir>/src/components$1",
      "^@contexts(.*)": "<rootDir>/src/contexts$1",
      "^@hooks(.*)": "<rootDir>/src/hooks$1",
      "^@layouts(.*)": "<rootDir>/src/layouts$1",
      "^@routing(.*)": "<rootDir>/src/routing$1",
      "^@styles(.*)": "<rootDir>/src/styles$1",
      "^@templates(.*)": "<rootDir>/src/templates$1",
      "^@utils(.*)": "<rootDir>/src/utils$1"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
